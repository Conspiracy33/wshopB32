{% include 'common/navTop.html.twig' %}
{% include 'common/navLeft.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <div class="row">
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="card">
                                <div class="header">
                                    <h2>
                                        Demande de rendez-vous avec un enseignant :
                                    </h2>

                                </div>
                                <div class="body">
                                    <form>
                                        <div class="large-12">
                                            <label>Email :</label>
                                            <div class="form-group">
                                                <div class="form-line">
                                                    <input type="text" class="form-control" placeholder="Exemple : p.c@epsi.fr">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="large-12">
                                            <label>Nom du projet :</label>
                                            <div class="form-group">
                                                <div class="form-line">
                                                    <input type="text" class="form-control" placeholder="Exemple : KCREA">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="large-12">
                                            <label>Compétences nécessaires :</label>
                                            <div class="form-group">
                                                <div class="form-line">
                                                    <input type="text" class="form-control" placeholder="Exemple : HTML, CSS, PHP, JS...">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="large-12">
                                            <b>Date</b>
                                            <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="material-icons">date_range</i>
                                            </span>
                                                <div class="form-line">
                                                    <input type="text" class="form-control date" placeholder="Ex: 30/07/2016">
                                                </div>
                                            </div>
                                        </div>

                                        <button type="button" class="btn btn-primary m-t-15 waves-effect">ENVOYER</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>



                </div>
            </div>
        </div>
    </section>

{% endblock %}